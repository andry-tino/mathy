{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "declaration": true,
        "strict": true,
        "strictNullChecks": false,
        "outDir": "../../out/browser",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "jsx": "react",
        "sourceMap": true
    },
    "typeRoots": [
        "../../node_modules",
        "../../node_modules/@types",
        "../definitions"
    ],
    "include": [
        "../../node_modules/interactjs/index.d.ts",
        "../definitions/*.d.ts",
        "./**/*"
    ]
}